<div class= "container portfolio-container">
	<div class="row">
		<div class= "col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main'), width: '100%' %>
		</div>

		<div class= "col-md-5">
			<h1><%= @portfolio_item.title %></h1>
			<hr>
			<em><%= @portfolio_item.subtitle %></em>
			<p> <%= @portfolio_item.body %></p>
 
			<h2>Technologies Used:</h2>
			<% @portfolio_item.technologies.each do |t| %>
			<p><%= t.name %></p>
			<% end %>	

			<% if logged_in?(:site_admin) %>
				<div>
					<%= link_to "Edit Portfolio Item", edit_portfolio_path(@portfolio_item) %>
					<%= link_to "Delete Portfolio Item", @portfolio_item, method: :delete, data: {confirm: "Are you sure?"} %>
				</div>
			<% end %>
		</div>
	</div>
</div>		